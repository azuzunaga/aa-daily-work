<h1><%= @sub.title %></h1>

<h3><%= @sub.description %></h3>

<h4>Moderated by the incredible: <%= @sub.moderator.username %></h4>

<%= link_to "Edit Sub", edit_sub_url(@sub) %>

<%= link_to "All Subs", subs_url %>

<%= link_to "New Post", new_post_url %>

<ul>
  <% @sub.posts.each do |post| %>
    <li>
      <%= link_to post.title, post_url(post) %>
    </li>
  <% end %>
</ul>
